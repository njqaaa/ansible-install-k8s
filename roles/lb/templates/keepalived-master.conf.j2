global_defs {
    router_id HAPROXY
}

vrrp_script check-haproxy {
    script "killall -0 haproxy"
    interval 5
    weight -60
}

vrrp_instance VI-kube-master {
    state MASTER
    priority 120
    unicast_src_ip {{ ansible_default_ipv4.address }}
    unicast_peer {
{% for h in groups['lb'] %}
    {% if hostvars[h]['ip'] != ansible_default_ipv4.address %}
        {{ hostvars[h]['ip'] }}
    {% endif %}
{% endfor %}
    }
    dont_track_primary
    interface {{ LB_IF }}
    virtual_router_id {{ ROUTER_ID }}
    advert_int 3
    track_script {
        check-haproxy
    }
    virtual_ipaddress {
        {{ MASTER_IP }}
    }
}
